---
import { Icon } from "astro-icon/components";
import ContentWidth from "../components/ContentWidth.astro";
---

<ContentWidth>
  <section>
    <div class="relative h-[250px] w-full">
      <!-- Fondo dividido en dos colores -->
      <div class="absolute top-0 left-0 w-full h-1/2 bg-white"></div>
      <div class="absolute bottom-0 left-0 w-full h-1/2 bg-blue-600"></div>

      <!-- Contenido del banner -->
      <div class="relative grid grid-cols-2 px-20 py-10">
        <div>
          <img
            src="/images/imgContactBanner.jpg"
            alt="Descripción de la imagen"
            class="w-70 h-auto object-cover"
          />
        </div>
        <div class="flex flex-col items-start justify-center">
          <h2 class="text-4xl font-serif mb-4 text-[#1f3557]">
            ¡COMUNIQUESE CON LOS EXPERTOS AHORA!
          </h2>
          <button
            class="flex items-center px-4 py-2 gap-2 bg-yellow-600 text-white hover:bg-yellow-500"
          >
            <span>COTIZACIÓN</span>
            <Icon name="mdi:arrow-right" size={30} />
          </button>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 px-20 py-10">
      <div>
        <img
          src="/images/imgContactBanner.jpg"
          alt="Descripción de la imagen"
          class="w-70 h-auto object-cover"
        />
      </div>
      <div class="flex flex-col items-start justify-center">
        <h2 class="text-4xl font-serif mb-4 text-[#1f3557]">
          ¡COMUNIQUESE CON LOS EXPERTOS AHORA!
        </h2>
        <button
          class="flex items-center px-4 py-2 gap-2 bg-yellow-600 text-white hover:bg-yellow-500"
        >
          <span>COTIZACIÓN</span>
          <Icon name="mdi:arrow-right" size={30} />
        </button>
      </div>
    </div>
  </section>
</ContentWidth>
