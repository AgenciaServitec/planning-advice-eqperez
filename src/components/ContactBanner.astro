---
import { Icon } from "astro-icon/components";
import ContentWidth from "../components/ContentWidth.astro";
---

<ContentWidth>
  <section>
    <!--<div class="flex items-center justify-center">-->
    <!-- Fondo dividido en dos colores -->
    <!--<div class="absolute top-0 left-0 w-full h-1/2 bg-white"></div>-->
    <!--<div class="absolute bottom-0 left-0 w-full h-1/2 bg-[#00204c]"></div>-->

    <!-- Contenido del banner -->
    <div
      class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-6 items-center py-15 mx-0 md:mx-0 lg:mx-25"
    >
      <div class="flex justify-center lg:justify-start">
        <img
          src="/images/imgContactBanner.jpg"
          alt="Descripción de la imagen"
          class="w-90 h-auto object-cover"
        />
      </div>
      <div
        class="flex flex-col items-center md:items-center lg:items-start justify-center text-center md:text-center lg:text-left"
      >
        <h2 class="text-4xl font-serif mb-4 text-[#1f3557]">
          ¡COMUNIQUESE CON LOS EXPERTOS AHORA!
        </h2>
        <button
          class="flex items-center px-4 py-2 gap-2 bg-yellow-600 text-white hover:bg-yellow-500"
        >
          <span class="font-bold">COTIZACIÓN</span>
          <Icon name="mdi:arrow-right" size={30} />
        </button>
      </div>
    </div>
    <!--</div>-->
  </section>
</ContentWidth>
